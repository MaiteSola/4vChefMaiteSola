  "item": [
    {
      "name": "Recipes",
      "item": [
        {
          "name": "1. GET - List All Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"]
            },
            "description": "Obtener todas las recetas activas. Debería devolver 5 recetas (Tiramisú, Paella, Gazpacho, Lentejas, Batido). La 'Receta Antigua' NO debe aparecer."
          }
        },
        {
          "name": "2. GET - Filter Recipes by Type (Postres)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes?type=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"],
              "query": [
                {
                  "key": "type",
                  "value": "1",
                  "description": "ID 1 = Postres"
                }
              ]
            },
            "description": "Filtrar por Tipo 1 (Postres). Debería devolver: Tiramisú y Batido Power."
          }
        },
        {
          "name": "3. POST - Create New Recipe (Ensalada)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Ensalada de Pasta Estival\",\n  \"number-diner\": 2,\n  \"type-id\": 3,\n  \"ingredients\": [\n    {\n      \"name\": \"Pasta de colores\",\n      \"quantity\": 200,\n      \"unit\": \"gr\"\n    },\n    {\n      \"name\": \"Atún\",\n      \"quantity\": 2,\n      \"unit\": \"latas\"\n    },\n    {\n      \"name\": \"Maíz\",\n      \"quantity\": 50,\n      \"unit\": \"gr\"\n    }\n  ],\n  \"steps\": [\n    {\n      \"order\": 1,\n      \"description\": \"Cocer la pasta y enfriar.\"\n    },\n    {\n      \"order\": 2,\n      \"description\": \"Mezclar con atún y maíz.\"\n    }\n  ],\n  \"nutrients\": []\n}"
            },
            "url": {
              "raw": "http://localhost:8000/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"]
            },
            "description": "Crear una receta NUEVA con cantidades numéricas correctas."
          }
        },
        {
          "name": "4. POST - Rate Paella (ID 2)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes/2/rating/5",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes", "2", "rating", "5"]
            },
            "description": "Valorar la Paella Valenciana (ID 2) con 5 estrellas."
          }
        },
        {
          "name": "5. DELETE - Remove Batido (ID 5)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes/5",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes", "5"]
            },
            "description": "Borrado lógico del Batido Power (ID 5)."
          }
        }
