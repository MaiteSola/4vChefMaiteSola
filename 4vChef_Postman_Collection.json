  "item": [
    {
      "name": "Recipes",
      "item": [
        {
          "name": "1. GET - List All Recipes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"]
            },
            "description": "Obtener todas las recetas activas"
          }
        },
        {
          "name": "2. GET - Filter Recipes by Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/recipes?type=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"],
              "query": [
                {
                  "key": "type",
                  "value": "1",
                  "description": "ID del tipo de receta"
                }
              ]
            },
            "description": "Filtrar recetas por tipo (ej: Postres, Entrantes, etc.)"
          }
        },
        {
          "name": "3. POST - Create New Recipe (Simple)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tiramisu Clásico\",\n  \"number-diner\": 4,\n  \"type-id\": 1,\n  \"ingredients\": [\n    {\n      \"name\": \"Azúcar\",\n      \"quantity\": \"250\",\n      \"unit\": \"gr\"\n    },\n    {\n      \"name\": \"Huevos\",\n      \"quantity\": \"3\",\n      \"unit\": \"unidades\"\n    },\n    {\n      \"name\": \"Mascarpone\",\n      \"quantity\": \"500\",\n      \"unit\": \"gr\"\n    }\n  ],\n  \"steps\": [\n    {\n      \"order\": 1,\n      \"description\": \"Batir las yemas con el azúcar\"\n    },\n    {\n      \"order\": 2,\n      \"description\": \"Agregar el mascarpone\"\n    },\n    {\n      \"order\": 3,\n      \"description\": \"Montar las claras a punto de nieve\"\n    }\n  ],\n  \"nutrients\": []\n}"
            },
            "url": {
              "raw": "http://localhost:8000/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"]
            },
            "description": "Crear una receta simple sin nutrientes"
          }
        },
        {
          "name": "4. POST - Create Recipe with Nutrients",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tarta de Chocolate\",\n  \"number-diner\": 6,\n  \"type-id\": 1,\n  \"ingredients\": [\n    {\n      \"name\": \"Chocolate negro\",\n      \"quantity\": \"200\",\n      \"unit\": \"gr\"\n    },\n    {\n      \"name\": \"Mantequilla\",\n      \"quantity\": \"100\",\n      \"unit\": \"gr\"\n    },\n    {\n      \"name\": \"Azúcar\",\n      \"quantity\": \"150\",\n      \"unit\": \"gr\"\n    },\n    {\n      \"name\": \"Huevos\",\n      \"quantity\": \"4\",\n      \"unit\": \"unidades\"\n    }\n  ],\n  \"steps\": [\n    {\n      \"order\": 1,\n      \"description\": \"Fundir el chocolate con la mantequilla\"\n    },\n    {\n      \"order\": 2,\n      \"description\": \"Batir los huevos con el azúcar\"\n    },\n    {\n      \"order\": 3,\n      \"description\": \"Mezclar todo y hornear a 180°C durante 30 minutos\"\n    }\n  ],\n  \"nutrients\": [\n    {\n      \"type-id\": 1,\n      \"quantity\": 12.5\n    },\n    {\n      \"type-id\": 2,\n      \"quantity\": 45.3\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:8000/recipes",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["recipes"]
            },
            "description": "Crear receta completa con información nutricional"
          }
        },
